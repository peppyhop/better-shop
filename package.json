{
	"name": "better-shop",
	"version": "1.0.0",
	"description": "A pluggable, type-safe shop service built with better-call and shop-client",
	"main": "dist/shop-service.js",
	"module": "dist/shop-service.mjs",
	"types": "dist/shop-service.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/shop-service.d.ts",
			"import": "./dist/shop-service.js",
			"require": "./dist/shop-service.cjs"
		},
		"./shop/getShop": {
			"types": "./dist/shop/getShop.d.ts",
			"import": "./dist/shop/getShop.js",
			"require": "./dist/shop/getShop.cjs"
		},
		"./shop/store": {
			"types": "./dist/shop/store.d.ts",
			"import": "./dist/shop/store.js",
			"require": "./dist/shop/store.cjs"
		},
		"./shop/products": {
			"types": "./dist/shop/products.d.ts",
			"import": "./dist/shop/products.js",
			"require": "./dist/shop/products.cjs"
		},
		"./shop/collections": {
			"types": "./dist/shop/collections.d.ts",
			"import": "./dist/shop/collections.js",
			"require": "./dist/shop/collections.cjs"
		},
		"./shop/checkout": {
			"types": "./dist/shop/checkout.d.ts",
			"import": "./dist/shop/checkout.js",
			"require": "./dist/shop/checkout.cjs"
		}
	},
	"files": [
		"dist",
		"README.md",
		"llms.txt"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/peppyhop/better-shop.git"
	},
	"publishConfig": {
		"access": "public",
		"provenance": true
	},
	"lint-staged": {
		"**/*.{ts,tsx}": [
			"biome check --write --no-errors-on-unmatched",
			"biome lint --diagnostic-level=error --no-errors-on-unmatched"
		]
	},
	"scripts": {
		"start": "bun run index.ts",
		"dev": "bun run --watch index.ts",
		"format": "biome format --write --no-errors-on-unmatched",
		"lint": "biome lint --diagnostic-level=error --no-errors-on-unmatched . && tsc --noEmit -p tsconfig.json",
		"build": "tsup src/shop-service.ts src/shop/getShop.ts src/shop/store.ts src/shop/products.ts src/shop/collections.ts src/shop/checkout.ts --format cjs,esm --dts --out-dir dist",
		"test": "bun test",
		"release": "semantic-release",
		"prepare": "husky"
	},
	"keywords": [
		"shopify",
		"better-call",
		"shop-client",
		"rpc",
		"typescript",
		"api"
	],
	"author": "Shubham Sinha",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@types/bun": "^1.3.3",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"semantic-release": "^25.0.2",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"dependencies": {
		"arktype": "^2.1.28",
		"better-call": "^1.1.5",
		"shop-client": "^3.9.0"
	}
}
